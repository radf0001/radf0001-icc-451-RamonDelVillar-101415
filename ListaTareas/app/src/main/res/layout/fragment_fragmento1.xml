<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
                android:id="@+id/tasksTextListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:textSize="32sp"
                android:text="Tareas: "/>

        <ListView
                android:id="@+id/taskListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="3dp"
                android:divider="@color/black" android:layout_below="@+id/tasksTextListView"/>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@android:color/holo_green_dark"
                android:src="@drawable/ic_baseline_add" android:layout_marginTop="32dp" android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp" android:layout_marginBottom="32dp"/>
</RelativeLayout>